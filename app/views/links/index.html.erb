<% if user_signed_in? %>
	<div class="row">
		<div class="col-sm-2" ><img src="pp.png" class="img-thumbnail" class="img-responsive" height="200px" width="150px" >
	            	<h3>Inventtravel.com</h3>
	            	
	            	<ul class="nav nav-pills nav-stacked"">
	    <li class="active"><a data-toggle="pill" href="#home">Home</a></li>
	    <li><a data-toggle="pill" href="#menu1">My Profile</a></li>
	    <li><a data-toggle="pill" href="#menu2">My doubts</a></li>
	    <li><a data-toggle="pill" href="#menu3">My queries</a></li>
	    <li><a data-toggle="pill" href="#menu3">My contact List</a></li>
	  </ul>
	</div>
 <div class="col-sm-8" >
	
	<div class="tab-content">
		<div id="home" class="tab-pane fade in active">
	    	<% @links.each do |link| %>
			    <div class="link row clearfix">
				    <h2>
				      <%= link_to link.title, link %><br>
				      <small class="author">Submitted <%= time_ago_in_words(link.created_at) %> by 
				      	<% if link.user.present? && link.user.email.present? %>
				      		<%= link.user.email %></small>
				      	<% end %>
				    </h2>
			    </div>

			    <div class="btn-group">
			      <a class="btn btn-default btn-sm" href="<%= link.url %>">Visit Link</a>
			      	<%= link_to like_link_path(link), method: :put, class: "btn btn-default btn-sm" do %>
			        	<span class="glyphicon glyphicon-thumbs-up">Like</span>
		                 
			        	<%= link.get_upvotes.size %>
			      	<% end %>
			      	<%= link_to dislike_link_path(link), method: :put, class: "btn btn-default btn-sm" do %>
			        	<span class="glyphicon glyphicon-thumbs-down">
			        	Dislike</span>
			        	<%= link.get_downvotes.size %>
			      	<% end %>
			      </div>
			<% end %>
		</div>
	    <div id="menu1" class="tab-pane fade">
	      <h3>Menu 1</h3>
	      <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
	    </div>
	    <div id="menu2" class="tab-pane fade">
	      <h3>Menu 2</h3>
	      <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.</p>
	    </div>
	    <div id="menu3" class="tab-pane fade">
	      <h3>Menu 3</h3>
	      <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
	    </div>
	</div>
</div>
    
  
  <% end %>


  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>